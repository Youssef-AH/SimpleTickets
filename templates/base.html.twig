                <div>
                    <li style="list-style: none" class="nav-item">
                        {% if app.user %}
                            <div class="mb-3">
                                <p style="color: white">You are logged in as <strong><i>{{ app.user.username }}</i></strong>, <a href="{{ path('app_logout') }}">Logout</a></p>
                            </div>
                        {% endif %}
                    </li>
                </div>
            </div>
        </nav>
